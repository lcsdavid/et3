   <children>
      <ComboBox />
      <ListView />
      <HBox alignment="CENTER_RIGHT" spacing="5.0">
         <children>
            <Button cancelButton="true" text="Cancel" textAlignment="CENTER">
               <font>
                  <Font name="Ubuntu" size="12.0" />
