<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <TextField fx:id="pathSelector">
         <VBox.margin>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </VBox.margin>
      </TextField>
      <TreeView fx:id="fileView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" />
      <HBox alignment="CENTER_RIGHT" spacing="8.0">
         <children>
            <Button cancelButton="true" onAction="#cancel" text="Cancel" textAlignment="CENTER">
               <font>
                  <Font name="Ubuntu" size="12.0" />
               </font>
            </Button>
            <Button disable="true" text="Open" textAlignment="CENTER">
               <font>
                  <Font name="Ubuntu" size="12.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
   </children>
</VBox>
